      <t t-snippet="mass_mailing_themes_boilerplate.boilerplate_mail_block_brand_cards" t-thumbnail="/mass_mailing/static/src/img/blocks/block_header_social.png"/>
      <t t-snippet="mass_mailing_themes_boilerplate.boilerplate_mail_block_group_banner" t-thumbnail="/mass_mailing/static/src/img/blocks/block_header_social.png"/>
    </xpath>
    <xpath expr="//div[@id='email_designer_default_footer']/div[2]" position="inside">
      <!-- FOOTER SNIPPETS -->
      <t t-snippet="mass_mailing_themes_boilerplate.boilerplate_mail_block_footer" t-thumbnail="/mass_mailing/static/src/img/blocks/block_header_social.png"/>
    </xpath>
  </template>
